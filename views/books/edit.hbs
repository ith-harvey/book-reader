
<h3>edit</h3>
<form action="/books/edit/{{book.id}}?_method=PUT" method="POST">
<div class="form-group">
  <label for="title">Title: </label>
  <input id="title" name="title" type="text" value="{{book.title}}">
</div>


<div class="form-group">
  <label for="description">Description: </label>
  <input id="description" name="description" type="text" value="{{book.description}}">
</div>

<div class="form-group">
  <label for="genre">Genre: </label>
  <input id="genre" name="genre" type="text" value="{{book.genre}}">
</div>


<div class="form-group">
  <label for="url">Book Image URL: </label>
  <input id="url" type="text" name="book_url" value="{{book.book_url}}">
</div>

<p>{{book.authoring_id}}</p>
<p>{{book.first_name}}</p>
<p>{{book.last_name}}</p>

<div class="form-group">
<input class="btn btn-default" type="submit"></input>
</div>

</form>
